package com.capgemini.seleniumtesting.basetestclasses;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Reporter;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.BeforeMethod;

import com.capgemini.seleniumtesting.testclasses.A;

public class TestA extends A{
	static {
		System.setProperty("webdriver.chrome.driver", "src/main/resources/chromedriver.exe");
	}

	@BeforeClass
	public void login() {
		WebDriver driver = new ChromeDriver();
		driver.get("https://www.hotstar.com");
		Reporter.log("from testdemo login", true);
	}
	
	@BeforeMethod
	public void logout() {
		WebDriver driver = new ChromeDriver();
		driver.get("https://www.hotstar.com");
		Reporter.log("from testdemo logout", true);
	}
}
